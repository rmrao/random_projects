% Integer, Reals, etc.
\newcommand\Z{\mathbb{Z}}
\newcommand\R{\mathbb{R}}
\newcommand\N{\mathbb{N}}
\newcommand\C{\mathbb{C}}

% Lettering that should be unaffected by math mode
\newcommand\E{\textup{E}}
\newcommand\rem{\textup{rem}}
\newcommand\num{\textsc{num}}
\newcommand\mmod{\textup{mod} \;} % Exists for continuity. Use builtin \pmod.
\newcommand\Var{\textup{Var}}

% New Math operators
\DeclareMathOperator*{\argmin}{\arg\!\min}
\DeclareMathOperator*{\argmax}{\arg\!\max}

% Space pictures appropriately in enumerate mode
\newcommand\imspace{\indent \hspace{0pt} \\}

% Make a tikz graph
\newenvironment{stategraph}
	{\begin{tikzpicture}[->, >=stealth', shorten >=1pt, auto, node distance=2.5cm, every state/.style={fill=white, draw=black, text=black}]}
	{\end{tikzpicture}}

